{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sajda",
  "version": "0.0.5",
  "identifier": "net.hafizhanif.sajda",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Sajda",
        "width": 320,
        "height": 600,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "resizable": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self' data:; connect-src 'self' https://api.waktusolat.app https://eu.i.posthog.com https://github.com"
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "resources": [
      "resources/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "Developer ID Application: SiagaX Industries (M) Sdn. Bhd. (SGT97Q7B97)",
      "entitlements": "Entitlements.plist",
      "infoPlist": "Info.plist"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFCNjEyQTc4NEE0M0UxMDYKUldRRzRVTktlQ3BoRzE1MmlHeWN0ZWRCY3VFdEd0SVJRTitOTFVrSGFhNEtERzE1c083RDdSZ28K",
      "endpoints": [
        "https://github.com/apitlekays/Sajda/releases/latest/download/latest.json"
      ]
    }
  }
}